@page "/export"
@inject MauiApp8.Services.JournalService JournalService
@inject MauiApp8.Services.PdfExportService PdfExportService

<div class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-between gap-2 mb-3">
    <div>
        <h2 class="mb-0 fw-bold">Export</h2>
        <div class="text-muted mt-1">Download your journal entries as a PDF.</div>
    </div>
</div>

@if (!string.IsNullOrWhiteSpace(Message))
{
    <div class="alert @(IsError ? "alert-danger" : "alert-info") border-0 rounded-4 shadow-sm">
        <div class="d-flex align-items-start gap-2">
            <span class="oi @(IsError ? "oi-warning" : "oi-info") mt-1" aria-hidden="true"></span>
            <div style="white-space: pre-wrap;">@Message</div>
        </div>
    </div>
}

<div class="row g-3">
    <div class="col-lg-7">
        <div class="card">
            <div class="card-header py-3">
                <div class="fw-semibold">Export Range</div>
                <div class="text-muted small">Choose a date range and generate your PDF.</div>
            </div>

            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Start Date</label>
                        <input type="date" class="form-control"
                               @bind-value="StartDate" @bind-value:format="yyyy-MM-dd" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">End Date</label>
                        <input type="date" class="form-control"
                               @bind-value="EndDate" @bind-value:format="yyyy-MM-dd" />
                    </div>
                </div>

                <hr class="my-4" style="border-color: rgba(255,255,255,0.12);" />

                <button class="btn btn-primary w-100 py-2" disabled="@IsBusy" @onclick="ExportPdf">
                    @if (IsBusy)
                    {
                        <span class="spinner-border spinner-border-sm me-2" aria-hidden="true"></span>
                        <span>Generating PDF…</span>
                    }
                    else
                    {
                        <span class="oi oi-data-transfer-download me-2" aria-hidden="true"></span>
                        <span>Export PDF</span>
                    }
                </button>

                <div class="text-muted small mt-2">
                    Your PDF will be saved locally and opened automatically.
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-5">
        <div class="card h-100">
            <div class="card-header py-3">
                <div class="fw-semibold">What’s Included</div>
                <div class="text-muted small">For the selected date range</div>
            </div>

            <div class="card-body">
                <ul class="mb-0">
                    <li>Entry dates, titles, and content</li>
                    <li>Mood info (if available)</li>
                    <li>Tags (if available)</li>
                </ul>

                <div class="mt-3 p-3 rounded-4"
                     style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.10);">
                    <div class="fw-semibold">Range Preview</div>
                    <div class="text-muted small mt-1">
                        @StartDate.ToString("MMM dd, yyyy") → @EndDate.ToString("MMM dd, yyyy")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    DateTime StartDate = DateTime.Today.AddDays(-30);
    DateTime EndDate = DateTime.Today;

    string? Message;
    bool IsBusy;
    bool IsError;

    async Task ExportPdf()
    {
        Message = null;
        IsError = false;

        if (EndDate < StartDate)
        {
            Message = "End Date cannot be earlier than Start Date.";
            IsError = true;
            return;
        }

        try
        {
            IsBusy = true;
            Message = "Generating PDF...";

            var entries = await JournalService.GetEntriesInRangeAsync(StartDate, EndDate);
            var bytes = PdfExportService.GenerateJournalPdf(entries, StartDate, EndDate);

            var fileName = $"Journal_{StartDate:yyyyMMdd}_{EndDate:yyyyMMdd}.pdf";
            var path = Path.Combine(FileSystem.AppDataDirectory, fileName);
            await File.WriteAllBytesAsync(path, bytes);

            Message = $"PDF saved successfully.\n\nLocation:\n{path}";

            await Launcher.Default.OpenAsync(new OpenFileRequest
            {
                File = new ReadOnlyFile(path)
            });
        }
        catch (Exception ex)
        {
            IsError = true;
            Message = $"Export failed:\n{ex.Message}";
        }
        finally
        {
            IsBusy = false;
        }
    }
}

@page "/lock"
@layout MauiApp8.Components.Layout.EmptyLayout
@inject MauiApp8.Services.SecurityService SecurityService
@inject NavigationManager Nav

<div class="d-flex align-items-center justify-content-center" style="min-height: calc(100vh - 90px);">
    <div class="card" style="max-width: 520px; width: 100%;">
        <div class="card-body p-4 p-md-5">
            <div class="text-center mb-4">
                <div class="mx-auto mb-3 shadow-sm"
                     style="width: 58px; height: 58px; border-radius: 18px;
                            background: linear-gradient(135deg, #7c5cff, #23c4ff);
                            display: grid; place-items: center; color: white;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                    </svg>
                </div>
                <h2 class="fw-bold mb-1">Unlock Journal</h2>
                <div class="text-muted">Enter your PIN to continue.</div>
            </div>

            @if (!string.IsNullOrWhiteSpace(Message))
            {
                <div class="alert alert-danger border-0 rounded-4 shadow-sm">
                    <div class="d-flex align-items-start gap-2">
                        <span class="oi oi-warning mt-1" aria-hidden="true"></span>
                        <div>@Message</div>
                    </div>
                </div>
            }

            <div class="mb-3">
                <label class="form-label">PIN</label>
                <input class="form-control form-control-lg"
                       type="@(ShowPin ? "text" : "password")"
                       inputmode="numeric"
                       maxlength="8"
                       placeholder="••••"
                       @bind="Pin" />
                <div class="d-flex justify-content-between align-items-center mt-2">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="showPin" @bind="ShowPin" />
                        <label class="form-check-label" for="showPin">Show PIN</label>
                    </div>
                    <div class="text-muted small">4–8 digits</div>
                </div>
            </div>

            <button class="btn btn-primary w-100 py-2" @onclick="Unlock" disabled="@IsBusy">
                @if (IsBusy)
                {
                    <span class="spinner-border spinner-border-sm me-2" aria-hidden="true"></span>
                    <span>Unlocking…</span>
                }
                else
                {
                    <span class="oi oi-lock-unlocked me-2" aria-hidden="true"></span>
                    <span>Unlock</span>
                }
            </button>

            <div class="text-muted small text-center mt-3">
                Your entries stay private on your device.
            </div>
        </div>
    </div>
</div>

@code {
    string Pin = "";
    string? Message;

    bool ShowPin;
    bool IsBusy;

    async Task Unlock()
    {
        Message = null;
        IsBusy = true;

        try
        {
            var ok = await SecurityService.ValidatePinAsync(Pin);
            if (!ok)
            {
                Message = "Invalid PIN.";
                return;
            }

            SecurityService.MarkUnlocked();
            Nav.NavigateTo("/today", replace: true);
        }
        finally
        {
            IsBusy = false;
        }
    }
}

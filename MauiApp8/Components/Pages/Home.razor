@page "/"
@inject MauiApp8.Services.JournalService JournalService
@inject NavigationManager Nav

<div class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-between gap-2 mb-3">
    <div>
        <h2 class="mb-0 fw-bold">Welcome Back</h2>
        <div class="text-muted mt-1">Your personal journal space.</div>
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-primary px-4"
                @onclick="@(() => Nav.NavigateTo("/today"))">
            <span class="oi oi-plus me-2" aria-hidden="true"></span>
            Write Today
        </button>

        <button class="btn btn-outline-secondary px-4"
                @onclick="@(() => Nav.NavigateTo("/timeline"))">
            <span class="oi oi-list-rich me-2" aria-hidden="true"></span>
            Timeline
        </button>
    </div>
</div>

@if (Loaded)
{
    <div class="row g-3 mb-3">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="text-muted">Current Streak</div>
                    <div class="display-6 fw-bold">@CurrentStreak</div>
                    <div class="text-muted small">days in a row</div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="text-muted">Total Entries</div>
                    <div class="display-6 fw-bold">@TotalEntries</div>
                    <div class="text-muted small">written so far</div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="text-muted">Last Entry</div>
                    <div class="fw-bold fs-5">@LastEntryDate</div>
                    <div class="text-muted small">most recent journal</div>
                </div>
            </div>
        </div>
    </div>
}


<div class="card">
    <div class="card-header py-3">
        <div class="fw-semibold">Why Journal?</div>
    </div>

    <div class="card-body">
        <p class="mb-2">
            Journaling helps you reflect, process emotions, and track your growth over time.
        </p>
        <p class="mb-0">
            Write a few lines each day to build clarity, consistency, and self-awareness.
        </p>
    </div>
</div>

@code {
    bool Loaded;

    int CurrentStreak;
    int TotalEntries;
    string LastEntryDate = "-";

    protected override async Task OnInitializedAsync()
    {
        var (current, _, _) = await JournalService.GetStreakStatsAsync(60);
        CurrentStreak = current;

        var all = await JournalService.GetPagedAsync(1, 1_000_000);
        TotalEntries = all.Count;

        var latest = all.OrderByDescending(e => e.EntryDate).FirstOrDefault();
        LastEntryDate = latest?.EntryDate.ToString("MMM dd, yyyy") ?? "-";

        Loaded = true;
    }
}